        <header>
            <div class="wrapper">
                <a href="/"><h1><span>Banana</span>Plate</h1></a>
                <nav>
                    <% if user_signed_in? %>
                        <a href="#" class="current-user">Username</a>
                        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                    <% else %>
                        <%= link_to('Login', new_user_session_path, :class => "btn")  %>
                    <% end %>
                </nav>
            </div>
        </header>
        <!-- / header -->

        <section class="hero">
            <article>
                <h2>A fresh new way to fashion blog</h2>
                <p>A publishing platform built for fashion bloggers &amp; designers</p>
                <a href="/posts" class="btn">Try the demo</a>
            </article>
        </section>
        <!-- / hero -->

        <section class="slider">
            <div class="flexslider">
                <div class="flex-viewport">
                    <ul class="slides" style="width: 1000%; -webkit-transition: 0s; -webkit-transform: translate3d(-1146px, 0, 0);">
                        <li class="clone" style="width: 1146px; float: left; display: block;">
                            <article>
                                <p>100% tailored to your needs</p>
                                <%= image_tag("ui.png", :alt => "rss feed") %>
                            </article>
                        </li>
                        <li class="flex-active-slide" style="width: 1146px; float: left; display: block;">
                            <article>
                                <p>Designed for your growth</p>
                                <div class="mask">
                                    <video autoplay="autoplay" loop="loop">
                                        <source src="http://dl.dropbox.com/u/40717613/grow.mp4" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            </article>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- / slider -->

        <section class="create">
            <article>
                <div class="wrapper">
                    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>

                        <div class="step step-1">
                            <p>bananaplate.com/</p>
                            <%= f.text_field :username, :class => 'accountName' %>
                            <div class="submit-btn" id="sub-1">
                                <%= image_tag("btn-arrow.svg", :alt => "rss feed") %>
                            </div>
                        </div>
                        <div class="step step-2">
                            <p>E-mail address:</p>
                            <%= f.email_field :email, :class => 'accountName' %>
                            <div class="submit-btn" id="sub-2">
                                <%= image_tag("btn-arrow.svg", :alt => "rss feed") %>
                            </div>
                        </div>
                        <div class="step step-3">
                            <p>Create a password:</p>
                            <%= f.password_field :password, :class => 'accountName' %>
                            <a href="/posts" title=""><div class="submit-btn" id="sub-3">
                                <%= image_tag("btn-arrow.svg", :alt => "rss feed") %>
                            </div></a>
                        </div>
                    <% end %>
                </div>
            </article>
        </section>
        <!-- / registration -->

        <footer>
            <article>
                <p>BananaPlate <span>&mdash;</span> Get ripe. Stay fresh.</p>
            </article>
        </footer>
